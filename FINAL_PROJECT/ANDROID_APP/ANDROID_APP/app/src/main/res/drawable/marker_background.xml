<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền của MarkerView -->
    <solid android:color="#FFFFFF" />

    <!-- Đường viền (stroke) của MarkerView -->
    <stroke
        android:width="1dp"
        android:color="#BDBDBD" />

    <!-- Bo góc -->
    <corners android:radius="8dp" />

    <!-- Độ đổ bóng bên trong (padding) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
